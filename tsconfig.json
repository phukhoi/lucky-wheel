{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react",
    "sourceMap": false,
    "skipDefaultLibCheck": true,
    "strict": true,
    "types": [],
    "removeComments": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false
  },
  "exclude": ["bin", "node_modules"]
}
