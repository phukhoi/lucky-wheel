{
  "name": "@cnv.tech/cnv-design",
  "version": "10832.0.0",
  "description": "CNV Design",
  "keywords": [],
  "author": {
    "name": "CNV Holdings",
    "email": "cuonglm@cnv.vn",
    "url": "https://core.cnvloyalty.com/design"
  },
  "license": "MIT",
  "homepage": "https://core.cnvloyalty.com/design",
  "repository": {
    "type": "git",
    "url": "https://gitlab.cnv.vn/core/design-system.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && npm run build-full",
    "build-ios": "npm run clean-ios && npm run build-full",
    "clean": "if exist dist rmdir dist /q /s",
    "clean-ios": "rm -rf dist",
    "build-full": "npm run build-ts && npm run build-css && npm run build-fonts-eot && npm run build-fonts-svg && npm run build-fonts-ttf && npm run build-fonts-woff",
    "build-ts": "tsc -p .",
    "build-css": "copyfiles -u 1 \"./src/**/*.css\" \"./dist/\"",
    "build-fonts-eot": "copyfiles -u 1 \"./src/**/*.eot\" \"./dist/\"",
    "build-fonts-svg": "copyfiles -u 1 \"./src/**/*.svg\" \"./dist/\"",
    "build-fonts-ttf": "copyfiles -u 1 \"./src/**/*.ttf\" \"./dist/\"",
    "build-fonts-woff": "copyfiles -u 1 \"./src/**/*.woff\" \"./dist/\"",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "@types/chart.js": "2.9.31",
    "@types/history": "4.7.8",
    "@types/node": "14.14.35",
    "@types/quill": "2.0.5",
    "@types/react": "16.14.5",
    "@types/react-beautiful-dnd": "13.0.0",
    "@types/react-dom": "16.9.8",
    "@types/react-router-dom": "5.1.7",
    "@types/react-select": "4.0.13",
    "copyfiles": "2.4.1",
    "hoist-non-react-statics": "3.3.2",
    "npm-watch": "0.9.0",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-router-dom": "5.2.0",
    "typescript": "4.2.3"
  },
  "dependencies": {
    "chart.js": "2.9.4",
    "flatpickr": "4.6.9",
    "history": "4.10.1",
    "quill": "1.3.7",
    "react-beautiful-dnd": "13.1.0",
    "react-chartjs-2": "2.11.1",
    "react-content-loader": "6.0.2",
    "react-quilljs": "1.2.14",
    "react-select": "4.3.0",
    "react-tag-input": "6.5.2"
  },
  "standard": {
    "ignore": [
      "node_modules/",
      "dist/"
    ]
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx,ts,tsx,css"
    }
  }
}
